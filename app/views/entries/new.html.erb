<!-- new post detail page -->

<h1>New Post for <%= @place.name %></h1>

<form action="/places/<%= @place.id %>/entries" method="post">
  <p>
    <label for="title">Title:</label>
    <input type="text" name="title" id="title">
  </p>

  <p>
    <label for="description">Description:</label>
    <textarea name="description" id="description"></textarea>
  </p>

  <p>
    <label for="occurred_on">Occurred On:</label>
    <input type="date" name="occurred_on" id="occurred_on">
  </p>

  <button type="submit">Submit Post</button>
</form>

<a href="/places/<%= @place.id %>">Back to <%= @place.name %></a>